<!DOCTYPE html>
<html ng-app='app'>
  <head>
    <title>TechBlogV000</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="container">

      <%= render "layouts/nav" %>

      <!-- views -->

      <div class="container-fluid" id="views">
        <!-- start view logged out -->

        <div ui-view></div>

        <!-- end view logged out -->

        <!-- start row logged in-->
        <div ng-show="false" class="row">
          <!-- sidebar -->
          <div class="col-sm-2" style="border-right: 1px solid black; border-bottom: 1px solid black">
            <ul class="nav nav-pills nav-stacked">
              <li style="margin-top: 10px;"><a href="#">Profile Picture and Name</a></li>
              <li><a href="#">Friends</a></li>
              <li><a href="#">Messages</a></li>
              <li><a href="#">Teams</a></li>
              <li><a href="#">Blogs</a></li>
              <li style="margin-bottom: 10px;"><a href="#">Projects</a></li>
            </ul>
          </div>
          <!-- end sidebar -->

          <!-- main views -->
          <div class="col-sm-8">
            <div ui-view></div>
          </div>
          <!-- end main views -->

          <!-- friend controller -->
          <div ng-controller="ChatController as cc">
            <div class="col-sm-2" style="border-left: 1px solid black; border-bottom: 1px solid black; padding-bottom: 10px;">
              <h3 style="text-align: center; border-bottom: 1px solid black; padding-bottom: 10px; margin-bottom: 10px;">Chat</h3>
              <ul class="nav nav-pills nav-stacked" ng-repeat="friend in cc.friends">
                <li><a href="#">{{friend.name}}</a></li>
              </ul>
            </div>
          </div>
          <!-- end friend controller -->
        </div>
        <!-- end row logged in-->
      </div>

      <!-- end views -->

      <!-- footer -->

      <footer class="container-fluid">
        <p style="color: white;">Footer Text</p>
      </footer>

      <!-- end footer  -->

    </div>
      <!-- end container -->

  </body>
</html>
